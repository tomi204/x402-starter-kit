{
  "name": "x402-avalanche-facilitator",
  "displayName": "x402 Avalanche Facilitator",
  "description": "Local x402 facilitator for Avalanche C-Chain",
  "usecase": "Backend",
  "keywords": [
    "x402",
    "facilitator",
    "avalanche",
    "payment",
    "express"
  ],
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "ci": "npm run build",
    "dev": "esrun --watch src/index.ts",
    "docker:build": "docker build -t x402-avalanche-facilitator:latest .",
    "docker:run": "docker run --rm --name x402-avalanche-facilitator -p 3402:3402 --env-file .env x402-avalanche-facilitator:latest",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "setup": "npm run setup-env",
    "setup-env": "shx test -e .env || shx cp .env.example .env",
    "lint": "eslint .",
    "start": "node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "eslint": "^9.35.0",
    "esrun": "^3.2.30",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "kleur": "^4.1.5",
    "shx": "^0.4.0",
    "viem": "^2.21.0",
    "x402": "^0.7.1",
    "x402-express": "^0.7.1",
    "zod": "^4.1.9"
  }
}
